{
  "hosting": {
    "public": "src",
    "ignore": [
      "firebase.json",
      "*/.",
      "/node_modules/"
    ],
    "cleanUrls":true,
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|js|css|html)",
        "headers": [{
          "key": "Cache-Control",
          "value": "must-revalidate, max-age=3600"
        }]
      },
      {
        "source": "404.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=300"
        }]
      }
    ]
  }
}
