{
  "hosting": {
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [{
        "source": "growthfile-testing.firebaseapp.com/v1/**",
        "destination": "/v1/index.html"
      },{
        "source": "**",
        "destination": "/index.html"
      }],
      "headers": [{
          "source": "**/*.@(jpg|jpeg|gif|png)",
          "headers": [{
            "key": "Cache-Control",
            "value": "max-age=0"
          }]
        }, {
          "source": "**/*.@(js)",
          "headers": [{
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }, {
            "key": "Cache-Control",
            "value": "max-age=0"
          }]
        },
        {
          "source": "**/*.@(css)",
          "headers": [{
            "key": "Cache-Control",
            "value": "max-age=0"
          }]
        }
      ]
    }
   
  
}