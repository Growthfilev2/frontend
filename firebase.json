{
  "hosting": {
    "headers": [ {
      "source": "**/*.@(jpg|jpeg|gif|png)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=0"
      }]
    },{
      "source": "**/*.@(js)",
      "headers": [ {
        "key": "Access-Control-Allow-Origin",
        "value": "*"
      },{
        "key":"Cache-Control",
        "value":"max-age=0"
      }]
    },
    {
      "source": "**/*.@(css)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=0"
      }]
    }],
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}